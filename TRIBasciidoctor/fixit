#!/bin/sh
#
# put command in the default path
#
VERSION=3
AVERSION=2.0.20
mkdir -p usr/bin usr/share/man/man1
ln -s ../../usr/versions/ruby-${VERSION}/bin/asciidoctor usr/bin
ln -s ../../../../usr/versions/ruby-${VERSION}/lib/ruby/vendor_ruby/gems/3.2.0/gems/asciidoctor-${AVERSION}/man/asciidoctor.1 usr/share/man/man1
