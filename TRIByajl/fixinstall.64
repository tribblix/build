#!/bin/sh
#
# SPDX-License-Identifier: CDDL-1.0
#
# fix script run in the install context
# assumes you're in the directory containing the built software
# the argument is DESTDIR
#

case $# in
1)
	DESTDIR=$1
	;;
*)
	exit 0
	;;
esac

if [ ! -d "${DESTDIR}" ]; then
   exit 0
fi

case `uname -p` in
sparc)
  ARCH64="sparcv9"
  ;;
i386)
  ARCH64="amd64"
  ;;
esac

#
# local package tweaks below
#
# put the 64-bit pkgconfig file in the right place
#

if [ -f ${DESTDIR}/usr/share/pkgconfig/yajl.pc ]; then
    mkdir -p ${DESTDIR}/usr/lib/pkgconfig
    mv ${DESTDIR}/usr/share/pkgconfig/yajl.pc ${DESTDIR}/usr/lib/pkgconfig
fi

mkdir -p ${DESTDIR}/usr/lib/${ARCH64}/pkgconfig
mv ${DESTDIR}/usr/lib/pkgconfig/yajl.pc ${DESTDIR}/usr/lib/${ARCH64}/pkgconfig/yajl.pc
