#!/bin/sh
#
# SPDX-License-Identifier: CDDL-1.0
#
rm -f usr/share/fluxbox/menu
cat > usr/share/fluxbox/menu <<_EOF
# Generated by fluxbox-generate_menu
#
# Customized for Tribblix
#
# If you read this it means you want to edit this file manually, so here
# are some useful tips:
#
# - You can add your own menu-entries to ~/.fluxbox/usermenu
#
# - If you miss apps please let me know and I will add them for the next
#   release.
#
# - The -r option prevents removing of empty menu entries and lines which
#   makes things much more readable.
#
# - To prevent any other app from overwriting your menu
#   you can change the menu name in ~/.fluxbox/init to:
#     session.menuFile: ~/.fluxbox/my-menu
[begin] (Fluxbox-1.3.7)
[encoding] {UTF-8}
      [exec] (Terminal) {sakura}
      [exec] (Pale Moon) {palemoon}
      [exec]   (Run) {fbrun}
[submenu] (Terminals)
      [exec]   (xterm) {xterm}
      [exec]   (sakura) {sakura}
      [exec]   (mrxvt) {mrxvt}
[end]
[submenu] (Net)
[submenu] (Browsers)
      [exec]   (Pale Moon) {palemoon}
      [exec]   (netsurf) {netsurf-gtk3}
      [exec]   (links-graphic) {links -driver x fluxbox.org}
      [exec]   (lynx) {sakura -e lynx fluxbox.org}
[end]
[submenu] (IM)
      [exec]   (pidgin) {pidgin}
[end]
[submenu] (Mail)
      [exec]   (mutt) {sakura -e mutt}
      [exec]   (claws-mail) {claws-mail}
[end]
[submenu] (IRC)
      [exec]   (HexChat) {hexchat}
      [exec]   (irssi) {sakura -e irssi}
[end]
[submenu] (FTP)
      [exec]   (ncftp) {sakura -e ncftp}
      [exec]   (ftp) {sakura -e ftp}
      [exec]   (gftp) {gftp}
[end]
[end]
[submenu] (Editors)
      [exec]   (bluefish) {bluefish}
      [exec]   (nedit) {nedit}
      [exec]   (geany) {geany}
      [exec]   (leafpad) {leafpad}
      [exec]   (emacs) {emacs}
      [exec]   (Ted) {Ted}
      [exec]   (nano) {sakura -e nano}
      [exec]   (vim) {sakura -e vim}
[end]
[submenu] (File utils)
      [exec]   (Thunar) {Thunar}
[end]
[submenu] (Multimedia)
[submenu] (Graphics)
      [exec]   (gimp) {gimp}
      [exec]   (inkscape) {inkscape}
      [exec]   (gqview) {gqview}
[end]
[submenu] (X-utils)
      [exec]   (xfontsel) {xfontsel}
      [exec]   (editres) {editres}
      [exec]   (viewres) {viewres}
      [exec]   (xclock) {xclock}
      [exec]   (xmag) {xmag}
      [exec] (Reload .Xdefaults) {xrdb -load $HOME/.Xdefaults}
[end]
[end]
[submenu] (Office)
      [exec]   (xclock) {xclock}
      [exec]   (xcalc) {xcalc}
      [exec]   (Orage)   {orage}
      [exec]   (abiword) {abiword}
      [exec]   (gnumeric) {gnumeric}
      [exec]   (grisbi) {grisbi}
      [exec]   (Imagination) {imagination}
[end]
[submenu] (Games)
      [exec]   (xeyes) {xeyes}
      [exec]   (OpenTTD) {openttd}
[end]
[submenu] (System Tools)
      [exec]   (top) {sakura -e top}
      [exec]   (htop) {sakura -e htop}
      [exec]   (jkstat) {jkstat browser}
[end]
[submenu] (Fluxbox menu)
      [config] (Configure)
[submenu] (System Styles) {Choose a style...}
      [stylesdir] (/usr/share/fluxbox/styles)
[end]
[submenu] (User Styles) {Choose a style...}
      [stylesdir] (~/.fluxbox/styles)
[end]
      [workspaces] (Workspace List)
[submenu] (Tools)
      [exec] (Window name) {xprop WM_CLASS|cut -d \" -f 2|xmessage -file - -center}
      [exec] (Screenshot) {xfce4-screenshooter}
      [exec] (Run) {fbrun}
      [exec] (Regen Menu) {fluxbox-generate_menu}
[end]
[submenu] (Window Managers)
      [restart] (mwm) {mwm}
      [restart] (twm) {twm}
      [restart] (icewm) {icewm}
      [restart] (fvwm) {startfvwm}
      [restart] (openbox) {openbox}
      [restart] (pekwm) {pekwm}
      [restart] (xfce4) {startxfce4}
      [restart] (windowmaker) {wmaker}
[end]
      [exec] (Lock screen) {xlock}
      [commanddialog] (Fluxbox Command)
      [reconfig] (Reload config)
      [restart] (Restart)
      [exec] (About) {(fluxbox -v; fluxbox -info | sed 1d) | xmessage -file - -center}
      [separator]
      [exit] (Exit)
[end]
[endencoding]
[end]
_EOF
