. /usr/lib/brand/tribblix-common/common.ksh
. /usr/lib/brand/shared/common.ksh

trap "fail_incomplete 'Installation interrupted.'" INT

ZONENAME=
ZONEPATH=

while getopts "R:z:" opt; do
    case $opt in
        R)  ZONEPATH="$OPTARG" ;;
        z)  ZONENAME="$OPTARG" ;;
        *)  fail_usage "";;
    esac
done
shift $((OPTIND-1))

if [ -z "$ZONEPATH" -o -z "$ZONENAME" ]; then
    print -u2 "Brand error: No zone path or name."
    exit $ZONE_SUBPROC_USAGE
fi

ZONEROOT=$ZONEPATH/root
# Populates ZONEPATH_DS
get_zonepath_ds $ZONEPATH

#
# Populate initial structure
#
# qemu needs to perform hostname lookups to resolve the display
# argument, hence the minimal copy of hosts and netconfig
#
(
    set -e
    cd $ZONEPATH

    umask 022
    mkdir root
    cd root
    mkdir -p dev etc etc etc/inet usr sbin lib var/run tmp
    chown -R root:sys .
    chmod 1777 tmp
    ln -s usr/bin

cat << EOM > etc/passwd
root:x:0:0:Super-User:/:/sbin/sh
EOM
cat << EOM > etc/inet/hosts
#
# Internet host table
#
::1 tribblix tribblix.local localhost loghost
127.0.0.1 tribblix tribblix.local localhost loghost
EOM

    ln -s inet/hosts etc
    cp /etc/netconfig etc/netconfig

    grep "^$ZONENAME:" /etc/zones/index | cut -d: -f4 > etc/uuid

) || fail_incomplete "Failed to build miniroot"

exit $ZONE_SUBPROC_OK

# Vim hints
# vim:ts=4:sw=4:et:fdm=marker
