#!/bin/sh
#
# SPDX-License-Identifier: CDDL-1.0
#
# dirty hack to build a static libevent
#
${THOME}/build/dobuild +64only libevent-2.1.12-stable -P /tmp/mc -C "--enable-static --disable-shared"
rm -fr /tmp/mc
cd libevent-2.1.12-stable-64bit
gmake install
cd ..
#
# sparc builds fails because of incorrect typedefs; x86 uses SIMD in a
# different code path so doesn't hit this
#
sed -i s:uint64:uint64_t: include/common/simd.h
sed -i 's:(int64):(int64_t):' include/common/simd.h
