#!/bin/sh
#
# fix script run in the install context
# assumes you're in the directory containing the built software
# the argument is DESTDIR
#

case $# in
1)
	DESTDIR=$1
	;;
*)
	exit 0
	;;
esac

if [ ! -d "${DESTDIR}" ]; then
   exit 0
fi

case `uname -p` in
sparc)
  ARCH64="sparcv9"
  ;;
i386)
  ARCH64="amd64"
  ;;
esac

#
# local package tweaks below
#

#
# 64-bit typelib
#
cp ../pango-1.44.7-64bit/build/pango/Pango*typelib ${DESTDIR}/usr/lib/${ARCH64}/girepository-1.0
cp ../atk-2.38.0-64bit/build/atk/Atk-1.0.typelib ${DESTDIR}/usr/lib/${ARCH64}/girepository-1.0
cp ../gdk-pixbuf-2.42.10-64bit/build/gdk-pixbuf/GdkPixbuf-2.0.typelib ${DESTDIR}/usr/lib/${ARCH64}/girepository-1.0
