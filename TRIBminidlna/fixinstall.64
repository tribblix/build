#!/bin/sh
#
# SPDX-License-Identifier: CDDL-1.0
#
# fix script run in the install context
# assumes you're in the directory containing the built software
# the argument is DESTDIR
#

case $# in
1)
	DESTDIR=$1
	;;
*)
	exit 0
	;;
esac

if [ ! -d "${DESTDIR}" ]; then
   exit 0
fi

#
# local package tweaks below
#
mkdir -p ${DESTDIR}/etc
cp minidlna.conf ${DESTDIR}/etc/minidlna.conf.dist
mkdir -p ${DESTDIR}/usr/share/man/man5
cp minidlna.conf.5 ${DESTDIR}/usr/share/man/man5
mkdir -p ${DESTDIR}/usr/share/man/man8
cp minidlnad.8 ${DESTDIR}/usr/share/man/man8
