#!/bin/sh
rm -fr usr/share/doc/ImageMagick-*/www
case `uname -p` in
sparc)
  ARCH64="sparcv9"
  ;;
i386)
  ARCH64="amd64"
  ;;
esac
#
rm -f usr/lib/lib*.la
rm -f usr/lib/${ARCH64}/lib*.la

#
# hide the config scripts in the 64-bit directory
#
mkdir -p usr/bin/${ARCH64}
mv usr/bin/Magick*-config usr/bin/${ARCH64}
