#!/bin/sh
rm -fr usr/share/doc/ImageMagick-*/www
case `uname -p` in
sparc)
  ARCH64="sparcv9"
  ARCH32="sparcv7"
  ;;
i386)
  ARCH64="amd64"
  ARCH32="i86"
  ;;
esac
#
rm -f usr/lib/lib*.la
rm -f usr/lib/${ARCH64}/lib*.la

#
# use isaexec
#
mkdir -p usr/bin/${ARCH32}
#mv usr/bin/magick usr/bin/${ARCH32}
mv usr/bin/animate usr/bin/${ARCH32}
mv usr/bin/compare usr/bin/${ARCH32}
mv usr/bin/composite usr/bin/${ARCH32}
mv usr/bin/conjure usr/bin/${ARCH32}
mv usr/bin/convert usr/bin/${ARCH32}
mv usr/bin/display usr/bin/${ARCH32}
mv usr/bin/identify usr/bin/${ARCH32}
mv usr/bin/import usr/bin/${ARCH32}
mv usr/bin/mogrify usr/bin/${ARCH32}
mv usr/bin/montage usr/bin/${ARCH32}
mv usr/bin/stream usr/bin/${ARCH32}
