#
# this will sign every unsigned zap file in the given directory
#

builtin echo

case $# in
1)
    PKGDIR=$1
    ;;
*)
    echo "Usage: $0 pkg_directory"
    exit 1
    ;;
esac

#
# Default locations
#
THOME=${THOME:-/packages/localsrc/Tribblix}
BUILD="${THOME}/build"

if [ ! -d "$BUILD" ]; then
   echo "ERROR: unable to find build directory $BUILD"
   exit 1
fi

if [ ! -d "${PKGDIR}" ]; then
    echo "Cannot find $PKGDIR"
    exit 1
fi

cd "$PKGDIR" || exit
for PKG in *.zap
do
    if [ ! -f "${PKG}.sig" ]; then
	${BUILD}/sign-file ${PKG}
    fi
done
