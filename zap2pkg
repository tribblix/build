#
# convert a zap format package to an svr4 package (in datastream format)
#
case $# in
2)
	FPKG="$1"
	BROOT="$2"
	;;
*)
	echo "Usage: $0 input_pkg output_dir"
	exit 2
	;;
esac

if [ ! -f "$FPKG" ]; then
   echo "ERROR: input file not found"
   exit 1
fi

if [ "${FPKG:0:1}" != / ]; then
    echo "Input file must have absolute path"
    exit 1
fi

if [ ! -d "$BROOT" ]; then
   echo "ERROR: output directory not found"
   exit 1
fi

#
BPKG=${FPKG##*/}
TDIR=/tmp/zap2pkg.`date '+%F-%T'`.$$
rm -fr $TDIR
mkdir -p $TDIR

cd $TDIR
unzip $FPKG
pkgtrans . ${BROOT}/${BPKG%.zap}.pkg all
chmod a+r ${BROOT}/${BPKG%.zap}.pkg

#
# clean up
#
cd /
rm -fr $TDIR
ls -lsh ${BROOT}/${BPKG%.zap}.pkg
